    "minimum-stability": "stable",
    "require": {
        "php": "^8.1",
        "slim/slim": "^4.11",
        "slim/psr7": "^1.6",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.4",
        "phpoffice/phpspreadsheet": "^1.29"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "symfony/var-dumper": "^6.3",
